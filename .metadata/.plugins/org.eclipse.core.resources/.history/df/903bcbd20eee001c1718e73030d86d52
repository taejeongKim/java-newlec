package test;

import java.util.Scanner;

import ex20.data_structure.Exam;

public class TestProgram {


	public static void main(String[] args) {

		Exam exam = new Exam();
		boolean running = true;

		while (running) {

			int menu = selectMenu();

			switch (menu) {

			case 1:

				inputExam(exam);
				break;

			case 2:

				printExam(exam);
				break;

			case 3:

				System.out.println("Good bye ~");
				running = false;
				break;

			default:
				System.out.println("input again!");
				break;
			}
		}
	}

	static int selectMenu() {
		int menu;

		Scanner scan = new Scanner(System.in);

		System.out.println("--- 메뉴 ---");
		System.out.println("1. 성적입력");
		System.out.println("2. 성적출력");
		System.out.println("3. 종료");
		System.out.print("> ");

		menu = scan.nextInt();
		return menu;
	}

	static void printExam(Exam exam) {

		int total;
		float avg;

		System.out.println("--- 결과 ---");

		System.out.printf("%s = %d\n", "국어", exam.kor);
		System.out.printf("%s = %d\n", "영어", exam.eng);
		System.out.printf("%s = %d\n", "수학", exam.math);

		total = exam.kor + exam.eng + exam.math;
		avg = total / 3.0f;

		System.out.printf("합계 : %d\n", total);
		System.out.printf("평균 : %.2f\n", avg);
		System.out.println();

	}

	static void inputExam(Exam exam) {
		// 성적 입력
		Scanner scan = new Scanner(System.in);

		int kor, eng, math;
		
			do {
				System.out.printf("%s > ", "국어");
				kor = scan.nextInt();
				if (kor < 0 || 100 < kor)
					System.out.println("out of range!!");
			} while (kor < 0 || 100 < kor);
			
			do {
				System.out.printf("%s > ", "영어");
				eng = scan.nextInt();
				if (eng < 0 || 100 < eng)
					System.out.println("out of range!!");
			} while (eng < 0 || 100 < eng);
			
			do {
				System.out.printf("%s > ", "수학");
				math = scan.nextInt();
				if (math < 0 || 100 < math)
					System.out.println("out of range!!");
			} while (math < 0 || 100 < math);
			
			exam.kor = kor;
			exam.eng = eng;
			exam.math = math;
			
		System.out.println();

	}
}