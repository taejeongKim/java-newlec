package ex25.abstraction;

public class NewlecExam extends Exam {

	private int com;
	
	public NewlecExam() {
		this(0,0,0,0);
	}
	
	public NewlecExam(int kor, int eng, int math, int com) {
		super(kor, eng, math);
		this.com = com;
	}
	
	
	
	public int getCom() {
		return com;
	}

	public void setCom(int com) {
		this.com = com;
	}

	@Override
	public int total() {
		// onTotal() 사용
		int total = onTotal() + com;
		return total;
	}

	@Override
	public float avg() {
		float avg = total()/4.0f;
		return avg;
	}

	
}
