package test;

import java.util.Scanner;

public class Temp {

	public static void main(String[] args) {
		
		boolean running = true;
		int[] kors= new int[3]; 
		
		while(running) {
			
			Scanner scan = new Scanner(System.in);
			
			for (int i=0; i<3; i++) {
				System.out.printf("국어%d > ", i+1);
				kors[i] = scan.nextInt();
			}
			
			for (int i=0; i<3; i++) {
				System.out.printf("국어%d : %d", i+1,kors[i]);
			}
			
			
		}

	}

}
