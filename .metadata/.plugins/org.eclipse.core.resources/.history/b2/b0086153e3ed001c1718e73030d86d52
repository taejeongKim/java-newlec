package test;

import java.util.Scanner;

public class ExamList {

	private Exam[] exams;
	private int current;
	
	public ExamList() {
		this(3);
	}
	
	public ExamList(int size) {
		this.exams = new Exam[size];
		this.current= 0;
	}

	public void add(Exam exam) {
		
		// 배열의 크기를 가변적으로 만들기
		if (exams.length == current) {
			Exam[] temp = new Exam[exams.length + 5];
			for (int i=0; i<current; i++)
				temp[i] = exams[i];
			exams = temp;
		}
		
		exams[current] = exam;
		current++;
		
	}

	public Exam get(int i) {
		
		return exams[i];
	}

	public int size() {
		return current;
	}




}
