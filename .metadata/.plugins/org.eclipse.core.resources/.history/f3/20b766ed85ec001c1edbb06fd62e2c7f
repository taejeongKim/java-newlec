package test;

import java.util.Scanner;

public class Test {
	
	int[] kors = new int[3];
	
	public static void main(String[] args) {
		

		int menu;
		boolean running = true;
		
		while(running) {
			Scanner scan = new Scanner(System.in);
			
			System.out.println("--- 메뉴 ---");
			System.out.println("1. 성적입력");
			System.out.println("2. 성적출력");
			System.out.println("3. 종료");	
			
			System.out.print(">");
			menu = scan.nextInt();
			
			switch(menu) {
			case 1:
				inputExam(kors);
				break;
			case 2:
				printExam(kors);
				break;
			case 3:
				running = false;
				System.out.println("Good-bye ~~");
				break;
			default:
				System.out.println("입력오류, 1~3번까지만 입력할 수 있습니다.");
				break;
			}
		}
	}

	private static void printExam() {
		int total = 0;
		float avg;
		
		for (int i=0; i<3; i++) {
			total = kors[i];
		}
		
		avg = total / 3.0f;
		
		System.out.println("--- 결과 ---");
		
		for (int i=0; i<3; i++) {
			System.out.printf("국어%d = %d\n", i+1, kors[i]);
		}
		
		System.out.printf("합계 = %d\n", total);
		System.out.printf("평균 = %.2f\n", avg);
		System.out.println();
	}

	private static void inputExam() {
		Scanner scan = new Scanner(System.in);
		
		int kor;
		
		for (int i=0; i<3; i++) {
			
			do {
				System.out.printf("국어%d : ", i+1);
				kor = scan.nextInt();
				if (kor<0 || 100<kor)
					System.out.println("유효한 범위(0~100)를 넘어갔습니다. 다시 입력해 주세요.");
			} while(kor<0 || 100<kor);
			
			kors[i] = kor;
		}
		
		System.out.println();
		
	}

}